{% extends 'admin/layout.html.twig' %}

{% block title %}Admin · Leads{% endblock %}

{% block admin_body %}
<h1>Leads</h1>

<table class="table table-bordered table-striped admin-table">
    <thead class="table-dark">
    <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Email</th>
        <th>Téléphone</th>
        <th>Créé le</th>
    </tr>
    </thead>
    <tbody>
    {% for lead in leads %}
        <tr>
            <td>#{{ lead.id }}</td>
            <td>{{ lead.name ?? '—' }}</td>
            <td>{{ lead.email ?? '—' }}</td>
            <td>{{ lead.phone ?? '—' }}</td>
            <td>{{ lead.createdAt is defined ? (lead.createdAt|date('d/m/Y H:i')) : '—' }}</td>
        </tr>
    {% else %}
        <tr><td colspan="5" class="text-center">Aucun lead</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
