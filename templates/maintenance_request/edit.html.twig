{% extends 'base.html.twig' %}

{% block title %}Modifier la demande #{{ request.id }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>‚úè Modifier la demande #{{ request.id }}</h1>

    {{ form_start(form) }}
        <div class="card mb-4">
            <div class="card-header bg-dark text-white">Informations du client</div>
            <div class="card-body">
                {{ form_row(form.fullName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.phone) }}
                {{ form_row(form.addressLine1) }}
                {{ form_row(form.addressLine2) }}
                {{ form_row(form.postalCode) }}
                {{ form_row(form.city) }}
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-primary text-white">D√©tails de la demande</div>
            <div class="card-body">
                {{ form_row(form.type) }}
                {{ form_row(form.requestedDate) }}
                {{ form_row(form.comment) }}
                {{ form_row(form.photos) }}
                {{ form_row(form.status) }}
            </div>
        </div>

        <button class="btn btn-warning">üíæ Mettre √† jour</button>
        <a href="{{ path('app_maintenance_request_index') }}" class="btn btn-secondary">‚¨Ö Retour</a>
    {{ form_end(form) }}

    <form method="post" action="{{ path('app_maintenance_request_delete', {id: request.id}) }}" onsubmit="return confirm('Confirmer la suppression ?');" class="mt-3">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ request.id) }}">
        <button class="btn btn-danger">üóë Supprimer</button>
    </form>
</div>
{% endblock %}
