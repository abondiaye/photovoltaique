  </nav>
  

  {% block body %}{% endblock %}

  <div class="footer">
    © {{ "now"|format_datetime(locale='fr', pattern='d MMMM yyyy') }} Photovoltaique — Tous droits réservés
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

