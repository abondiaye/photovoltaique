  <div id="robot-messages"></div>
</div>
<script>
document.addEventListener("DOMContentLoaded", () => {
  const textString = `
{HEY! Je suis là .}
/CODESYRIUSPROSENGAGE...&*&&*&;...... 
{ pas encore un Bot, mais bientôt :}`;

  const textElem = document.querySelector(".hacking-animation__text");
  let count = 0;

  function typeChar() {
    if (count < textString.length) {
      if (textString[count] === "\n") {
        textElem.appendChild(document.createElement("br"));
      } else {
        const span = document.createElement("span");
        span.classList.add("hacking-animation__character");
        span.textContent = textString[count];
        textElem.appendChild(span);
      }
      count++;
      setTimeout(typeChar, 40);
    } else {
      const cursor = document.createElement("span");
      cursor.classList.add("cursor");
      cursor.textContent = "|";
      textElem.appendChild(cursor);
    }
  }

  typeChar();
});
</script>
